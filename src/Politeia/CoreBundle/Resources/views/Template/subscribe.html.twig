
<!-- subscribe -->
<div id="subscribe" data-section="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form id="contactForm" data-toggle="validator">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <input type="email" class="form-control" id="email" placeholder="ADRESSE EMAIL" required>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" id="form-submit" class="btn btn-info btn-md btn-form-submit">VALIDER</button>
                            <div id="msgSubmit" class="h3 text-center hidden"></div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- / container -->
</div><!-- /subscribe -->
{% extends sonata_block.templates.block_base %}

{% block block %}
    <!-- small box -->
    <div class="small-box {{ settings.color }}">
        <div class="inner">
            <h3>{{ nb }}</h3>

            <p>{{ settings.text }}</p>
        </div>
        <div class="icon">
            <i class="fa {{ settings.icon }}"></i>
        </div>
        <span class="small-box-footer">&nbsp;</span>        
    </div>
{% endblock %}
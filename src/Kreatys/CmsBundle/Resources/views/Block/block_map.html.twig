{% extends 'KreatysCmsBundle:Block:block_base.html.twig' %}

{% block block %}
    {% if not front %}
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
        <script type="text/javascript" src="{{ asset('bundles/kreatyscms/assets/gmap/gmap.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/kreatyscms/assets/block/block_map.js') }}"></script>
    {% endif %}
    
    {% if front %}<div class="{{ settings.padding_top }} {{ settings.padding_bottom }}">{% endif %}
        <div id="map" class="map map-box map-box-space" data-adresse="{{ settings.adresse|replace('\r\n', ',') }}"></div>
    {% if front %}</div>{% endif %}
{% endblock %}
